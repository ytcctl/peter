{
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "hostRequirements": {
    "cpus": 4
  },
  "forwardPorts": [8888, 6080],
  "postCreateCommand": "R -q -e \"IRkernel::installspec(user = FALSE)\" && echo 'Dev container setup complete!'",
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "settings": {
  "r.rpath.linux": "/usr/local/bin/R",
  "r.rterm.linux": "/usr/local/bin/R"
      },
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-powertoys",
        "ms-python.python",
        "REditorSupport.r",
        "REditorSupport.r-lsp",
        "auchenberg.vscode-browser-preview"
      ]
    }
  }
}