{
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "hostRequirements": {
    "cpus": 4
  },
  "forwardPorts": [8888],
  "postStartCommand": "R -q -e \"if (file.exists('renv.lock')) renv::restore()\"",
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "settings": {
        "r.rpath.linux": "/usr/bin/R",
        "r.rterm.linux": "/usr/bin/R"
      },
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-powertoys",
        "ms-python.python",
        "REditorSupport.r",
        "REditorSupport.r-lsp"
      ]
    }
  }
}